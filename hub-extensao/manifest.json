{
  "manifest_version": 3,
  "name": "HUB de Extensões",
  "version": "1.0",
  "description": "HUB com gravador de áudio e ferramentas de cálculo/atalhos.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Abrir HUB"
  },
  "permissions": [
    "clipboardWrite",
    "downloads"
  ],
  "host_permissions": [
    "https://tmpfiles.org/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["binarios/MVP.exe"],
      "matches": ["<all_urls>"]
    }
  ]
}
